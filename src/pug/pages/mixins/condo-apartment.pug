//- Property widget at bottom of pages
- var exchangeName = 'Urbana '
mixin widget(options)

    widget()
        .page-header-ui-content.py-5.position-relative
            .container.px-5
                case options.type
                    when 'condo'
                        h1.page-header-ui-title.text-center #{exchangeName} Condos
                    when 'apartment'
                        h1.page-header-ui-title.text-center #{exchangeName} Apartments
                .row.gx-5.justify-content-center
                    .col.bg-white-25.border.rounded.mt-3.mb-3.p-4
                        h4.text-center Filter By
                        .row
                            .col-md-2.d-sm-none.d-md-block.mt-2
                            .form-floating.col-md-3.col-sm-6.mt-2
                                select#zipcodeSelect.form-select(aria-label='Zop code')
                                    option(value='' selected='') -- Any --
                                    option(value='20874') 20874
                                    option(value='20876') 20876
                                label(for='zipcodeSelect') Zip Code
                            .form-floating.col-md-3.col-sm-6.mt-2
                                select#condoTypeSelect.form-select(aria-label='Condo Type')
                                    option(value='' selected='') -- Any --
                                    option(value='Garden') Garden Style
                                    option(value='High') High and MId-Rise
                                    option(*ngif="locationsType=='Condo'" value='Townhomes') Townhomes
                                label.ml-2(for='condoTypeSelect') Building Type
                            .col-md-3.col-sm-6.mt-2
                                .form-check.form-switch
                                    input#garageParking.form-check-input(type='checkbox')
                                    label.form-check-label(for='garageParking') GarageParking
                                .form-check.form-switch
                                    input#washerDryer.form-check-input(type='checkbox')
                                    label.form-check-label(for='washerDryer') In-Unit Washer/Dryer
                            .col-md-4.d-sm-none.d-md-block.mt-2
